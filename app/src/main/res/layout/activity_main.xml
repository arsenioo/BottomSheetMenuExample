<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/rootLayout"
    android:saveEnabled="false"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_gravity="center"/>

    <!--Exit button-->
    <FrameLayout
        android:id="@+id/exitButton"
        android:saveEnabled="false"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_left_rounded"
        android:layout_gravity="top|right"
        tools:ignore="RtlHardcoded">
        <androidx.appcompat.widget.AppCompatImageButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/exitButImage"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:minWidth="0dp"
            android:onClick="onExitButtonClick"
            app:srcCompat="@drawable/ic_menu_quit"
            />
    </FrameLayout>

    <!--Menu sheet-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuLayout"
        android:saveEnabled="false"
        app:behavior_hideable="false"
        app:behavior_peekHeight="400dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <!--Peak part: grip button and labels-->
        <com.example.bottomsheetmenuexample.DynamicArrowView
            android:id="@+id/gripButton"
            android:saveEnabled="false"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/buttonsFlex"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:visibility="visible"
            app:backgroundDrawable="@drawable/bg_top_right_rounded"
            app:innerColor="@android:color/white"
            app:outerColor="@android:color/black"
            app:innerWidth="2dp"
            app:outerScaleFactor="2.0" />
        <TextView
            android:id="@+id/timeLabelView"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/gripButton"
            android:layout_toEndOf="@+id/gripButton"
            android:layout_above="@+id/buttonsFlex"
            android:text="Time: 1:05:10"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/scoresLabelView"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/timeLabelView"
            android:layout_toEndOf="@+id/timeLabelView"
            android:layout_above="@+id/buttonsFlex"
            android:text="Score: 112"
            tools:ignore="HardcodedText" />
        <!--All the menu buttons-->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/buttonsFlex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg_top_right_rounded"
            android:padding="@dimen/abc_dialog_list_padding_bottom_no_buttons"
            app:flexWrap="wrap"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            tools:ignore="PrivateResource">
            <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                android:id="@+id/menuButton1"
                style="@style/MenuButton"
                app:drawableTopCompat="@drawable/ic_menu_deal"
                android:text="@string/new_g"
                app:layout_flexGrow="1"
                app:layout_minWidth="76dp"
                android:onClick="onFirstButtonClick"/>
            <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                android:id="@+id/menuButton2"
                style="@style/MenuButton"
                app:drawableTopCompat="@drawable/ic_menu_undo"
                android:text="@string/undo"
                app:layout_flexGrow="1"
                app:layout_minWidth="76dp"
                android:onClick="onSecondButtonClick"/>
            <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                android:id="@+id/batteryButton"
                style="@style/MenuButton"
                app:layout_flexGrow="1"
                app:layout_minWidth="76dp"
                android:onClick="onThirdButtonClick"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                app:layout_flexGrow="3">
                <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                    android:id="@+id/menuButton4"
                    android:layout_weight="1"
                    style="@style/MenuButton"
                    app:drawableTopCompat="@drawable/ic_menu_settings"
                    android:text="@string/options"
                    android:onClick="onFourthButtonClick"/>
                <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                    android:id="@+id/menuButton5"
                    android:layout_weight="1"
                    style="@style/MenuButton"
                    app:drawableTopCompat="@drawable/ic_menu_solution"
                    android:text="@string/solution"
                    android:onClick="onFifthButtonClick"/>
                <com.example.bottomsheetmenuexample.ButtonVectorDrawableCompat
                    android:id="@+id/menuButton6"
                    android:layout_weight="1"
                    style="@style/MenuButton"
                    app:drawableTopCompat="@drawable/ic_menu_progress"
                    android:text="@string/graph_progress"
                    android:onClick="onSixthButtonClick"/>
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
