<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppThemeDefault" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">#B0000000</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeDefault">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:saveEnabled">false</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
</resources>
